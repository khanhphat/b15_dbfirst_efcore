@model IEnumerable<b15_dbfirst_efcore.Models.HangHoa>

@{
    ViewData["Title"] = "TimKiem";
}

<h2>Tìm kiếm</h2>
<form asp-action="TimKiem" asp-controller="HangHoa"  class="form-group">
    Tìm: <input name="TuKhoa" />
    Tu: <input name="GiaTu" type="number" min="0" />
    Den: <input name="GiaDen" type="number" min="0" />
    <button class="btn-default">Tìm kiếm</button>
</form>

<table class="table table-hover">
    <tr>
        <th>Tên Hàng Hóa</th>
        <th>Hình ảnh</th>
        <th>Đơn giá</th>
        <th>Mã loại</th>
    </tr>
    
    @foreach (var hh in Model)
    {
   
    <tr>
        <td>@hh.TenHh</td>
        <td><img style="width:10%" src="~/Hinh/HangHoa/@hh.Hinh"/></td>
        <td>@hh.DonGia.Value.ToString("#,##0") đ</td>
        <td>@hh.MaLoaiNavigation.TenLoai</td>
    </tr>
    }
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}


